<%= nl %>

<%   const data = JSON.stringify(it.data[entry.horse_id], null, "\t") %>
<%   if (entry.horse_id.match(/\w{10}/i)){ %><% /* ---------------------- */ %>
export const data_<%= entry.horse_id %> = <%= data %><%= br %>

#### 馬体重
<%= nl %>

<WeightTransition
    id='weight-transition-<%= entry.horse_id %>'
    width='100%'
    height='100%'
    minHeight={250}
    chartKeywords={['weight', 'impost_ratio']}
    data={data_<%= entry.horse_id %>}
/>
<%= nl %>

#### コーナー順位
<%= nl %>

<RankTransition
    id='rank-transition-<%= entry.horse_id %>'
    width='100%'
    height='100%'
    minHeight={500}
    data={data_<%= entry.horse_id %>}
/>
<%= nl %>
<%  } %><% /* End if (entry.horse_id.match(/\w{10}/i)) ------------------ */ %>

<%   const { results } = it.records.find(({ horse_id }) => horse_id === entry.horse_id) %>
<%   if (results.length > 0){ %>
<%~    include('./result_table',  { results }) %>
<%=  nl %>
<%   } %>

